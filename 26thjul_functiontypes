//naming function
function rectangle(){
    let l= parseInt(prompt("enter length of the rectangle:", 0));
    let b= parseInt(prompt("enter breadth of the rectangle:", 0));
    console.log("perimeter of the rectangle is ", (2*(l+b)));
    console.log("area of the rectangle is ", (l*b));
}


//arrow function
arrowrect=>{
    let l= parseInt(prompt("enter length of the rectangle:", 0));
    let b= parseInt(prompt("enter breadth of the rectangle:", 0));
    console.log("perimeter of the rectangle is ", (2*(l+b)));
    console.log("area of the rectangle is ", (l*b));
}

// anonymous function
var anonrect= function(){
    let l= parseInt(prompt("enter length of the rectangle:", 0));
    let b= parseInt(prompt("enter breadth of the rectangle:", 0));
    console.log("perimeter of the rectangle is ", (2*(l+b)));
    console.log("area of the rectangle is ", (l*b));
};

//naming function expression
var nferect= function r(){
    let l= parseInt(prompt("enter length of the rectangle:", 0));
    let b= parseInt(prompt("enter breadth of the rectangle:", 0));
    console.log("perimeter of the rectangle is ", (2*(l+b)));
    console.log("area of the rectangle is ", (l*b));
};
